{% extends "base.html.twig" %}
{% block corpo %}

    <div class="d-flex flex-row align-items-center justify-content-center text-center">
        <section style="width: 40%; min-height: 100vh;" class="bg-text-dark-blue d-flex flex-column align-items-center justify-content-center px-5">
            <h1>Bem-vindo!</h1>
            <p>Crie uma conta para acesssar a administraçao, ou, caso já tenha uma conta:</p>
            <a href="{{ url('Admin/login/entrar') }}" class="btn btn-outline-light hover-text-dark-blue:hover px-4">
                Entrar
            </a>
        </section>

        <form style="width: 60%; min-height: 100vh;" class="text-dark d-flex flex-column align-items-center justify-content-center px-5" method="post" action="{{ url('Admin/login') }}">
            {{ flash() }}
            <h1>Criar conta</h1>
            <div class="">
                <a href='#' class="link-dark-blue"><i class="bi bi-facebook fs-1"></i></a>
                <a href='#' class="link-dark-blue"><i class="bi bi-google fs-1 mx-4"></i></a>
                <a href='#' class="link-dark-blue"><i class="bi bi-envelope-at fs-1"></i></a>
            </div>
            <p>Informe seus dados para criar uma conta</p>

            <div class="text-start w-50 d-flex flex-column align-items-center">

                <div class="input-group mb-3">
                    <span class="input-group-text px-3"><i class="bi bi-people fs-3 text-dark-blue"></i></span>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome de usuário">
                        <label for="nome" class="form-label px-3">Nome de usuário</label>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text px-3"><i class="bi bi-envelope-at fs-3 text-dark-blue"></i></span>
                    <div class="form-floating">
                        <input type="mail" class="form-control" id="email" name="email" placeholder="E-mail">
                        <label for="email" class="form-label px-3">E-mail</label>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text px-3"><i class="bi bi-key fs-3 text-dark-blue"></i></span>
                    <div class="form-floating">
                        <input type="password" class="form-control" id="senha" name="senha" placeholder="Senha">
                        <label for="senha" class="form-label px-3">Senha</label>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text px-3"><i class="bi bi-key-fill fs-3 text-dark-blue"></i></span>
                    <div class="form-floating">
                        <input type="password" class="form-control" id="senha_confirm" name="senha_confirm" placeholder="Confirmar senha">
                        <label for="senha_confirm" class="form-label px-3">Confirmar senha</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-dark-blue px-5 rounded-pill">Cadastrar</button>
            <div>
                
        </form>
    </div>

{% endblock %}